Console.WriteLine("Digite 1 para converter Celsius para Fahrenheit");
Console.WriteLine("Digite 2 para converter Fahrenheit para Celsius");
int escolha = Convert.ToInt32(Console.ReadLine());

if (escolha == 1)
{
    Console.WriteLine("Digite a temperatura em Celsius:");
    float celsius = float.Parse(Console.ReadLine());
    float fahrenheit = (celsius * 9 / 5) + 32;
    Console.WriteLine("Temperatura em Fahrenheit: " + fahrenheit);
}
else if (escolha == 2)
{
    Console.WriteLine("Digite a temperatura em Fahrenheit:");
    float fahrenheit = float.Parse(Console.ReadLine());
    float celsius = (fahrenheit - 32) * 5 / 9;
    Console.WriteLine("Temperatura em Celsius: " + celsius);
}
else
{
    Console.WriteLine("Opção inválida. Escolha 1 ou 2.");
}
